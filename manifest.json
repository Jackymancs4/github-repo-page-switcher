{

  "description": "Adds a page action to easily switch from a Github repo to its Pages site.",
  "manifest_version": 2,
  "name": "Github Repo to Pages Switcher",
  "version": "1.0.0",

  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon.svg",
    "24": "icons/icon.svg",
    "32": "icons/icon.svg",
    "64": "icons/icon.svg",
    "128": "icons/icon.svg",
    "256": "icons/icon.svg"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/icon.svg",
      "19": "icons/icon.svg",
      "24": "icons/icon.svg",
      "32": "icons/icon.svg",
      "38": "icons/icon.svg"
    },
    "show_matches": [
      "https://*.github.io/*",
      "https://*.github.com/*"
    ]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://*.github.io/*",
    "https://*.github.com/*"
  ]

}
